<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_marginLeft="20dp"
            android:hint="City , state"
            android:id="@+id/edtSearch"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/txtname"
        android:layout_marginTop="6dp"
        android:text="Tên thành phố:"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtCountry"
        android:layout_marginTop="6dp"
        android:text="Tên đất nước:"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/imgIcon"/>

    <TextView
        android:id="@+id/txtTemp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Nhiệt độ:"
        android:textColor="#E91818"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txtStatus"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Trạng thái:"
        android:textSize="25dp"
        android:textColor="#111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_marginTop="13dp"
                android:layout_width="111dp"
                android:layout_height="58dp"
                android:src="@drawable/anh2" />
            <TextView
                android:layout_marginTop="2dp"
                android:text="Độ Ẩm"
                android:textSize="20dp"
                android:id="@+id/textViewhumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="116dp"
                android:layout_height="61dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/clould3" />

            <TextView
                android:text="Mây"
                android:textSize="20dp"
                android:id="@+id/textViewCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:src="@drawable/wind4" />
            <TextView
                android:text="Gió"
                android:textSize="20dp"
                android:id="@+id/textViewWill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/textViewDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày cập nhập:"
            android:textSize="20dp" />
    <Button
        android:id="@+id/btnChangeActivity"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời Tiết Các giờ tiếp theo"
        android:background="#ECE7EE"
        android:layout_gravity="center"/>


</LinearLayout>